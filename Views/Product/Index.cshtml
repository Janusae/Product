<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .product-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
            margin-bottom: 20px;
            transition: transform 0.2s;
        }

            .product-card:hover {
                transform: scale(1.05);
            }

        .product-image {
            width: 100%;
            height: auto;
            object-fit: cover;
        }

        .product-title {
            font-size: 1.25rem;
            font-weight: bold;
        }

        .product-price {
            color: #d9534f;
            font-size: 1.125rem;
            font-weight: bold;
        }

        .product-description {
            font-size: 0.875rem;
            color: #555;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h1 class="mb-4 text-center">Product List</h1>
        <div class="row">
            @if (ViewBag.data != null)
            {
                foreach (var item in ViewBag.data)
                {
                    <div class="col-md-4 mb-4">
                        <div class="product-card">
                            <img src="@Url.Content("~/Content/Images/" + item.ImageAddress)" alt="@item.Title" class="product-image">                            <div class="p-3">
                                <h2 class="product-title">@item.Title</h2>
                                <p class="product-description">@item.Description</p>
                                <p class="product-price">$@(@item.price / 100.0)</p>
                                <p class="text-muted">Created on: @item.dateOfcreate.ToString("MMMM dd, yyyy")</p>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center">
                    <p>No products available.</p>
                </div>
            }
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    @*<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>*@
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>


